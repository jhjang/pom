<% if current_user %>
  <%= render 'form' %>
  <hr>
<% end %>
<div id="comments_container">
  <table class="table table-striped">
    <tr>
      <th>수신</th>
      <th>종류</th>
      <th>내용</th>
      <th>시간</th>
      <th>삭제</th>
    </tr>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.receiver.name %></td>
        <td><%= comment.category %></td>
        <td><%= comment.content %></td>
        <td><%= comment.created_at.strftime("%F %T") %></td>
        <td><%= link_to '삭제',  comment,  method: :delete, data: { confirm: '삭제하시겠습니까?' } %></td>

      </tr>
    <% end %>
  </table>
</div>
